{
  "easycom": {
    // uview 组件
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/login",
      "style": {
        // 隐藏系统导航栏, 使用uView自定义导航栏[https://www.uviewui.com/components/navbar.html]
        "navigationStyle": "custom"
      }
    },
    { "path": "pages/index/index" },
    { "path": "pages/mine/index" },
    { "path": "pages/mine/detail" }
  ],
  "globalStyle": {
    "navigationBarTitleText": "BaseApp",
    "navigationBarTextStyle": "black", // 状态栏字体
    "navigationBarBackgroundColor": "#ffffff"
  },
  "tabBar": {
    "list": [{
      "pagePath": "pages/index/index",
      "iconPath": "static/tabBar/home.png",
      "selectedIconPath": "static/tabBar/homeselect.png",
      "text": "首页"
    }, {
      "pagePath": "pages/mine/index",
      "iconPath": "static/tabBar/mine.png",
      "selectedIconPath": "static/tabBar/mineselect.png",
      "text": "我的"
    }]
  },
  "uniIdRouter": {}
}
