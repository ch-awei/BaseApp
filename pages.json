        {
            "path": "pages/index/index",
            "style": {
                // 隐藏系统导航栏, 使用uView自定义导航栏[https://www.uviewui.com/components/navbar.html]
                "navigationStyle": "custom" 
            }
        },
        { "path": "pages/home/index" },
        { "path": "pages/me/index" },
